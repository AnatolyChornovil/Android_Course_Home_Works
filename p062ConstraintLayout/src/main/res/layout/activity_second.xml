<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <TextView
        android:id="@+id/mainTxt"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:paddingTop="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="RESERVE TIME"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        android:background="@android:color/holo_red_dark"/>

    <ImageView
        android:id="@+id/mainImg"
        android:layout_width="410dp"
        android:layout_height="221dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainTxt"
        app:srcCompat="@drawable/strawberry2" />

    <TextView
        android:id="@+id/circleCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cirkle2"
        android:gravity="center"
        android:text="CALL"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="229dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp" />

    <ImageView
        android:id="@+id/phoneImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_outline_call_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainImg"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
               />

    <TextView
        android:id="@+id/firstNmbr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/divider"
        app:layout_constraintTop_toTopOf="@id/phoneImg"
        android:text="(069)6969696"
        android:textSize="25dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/subTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/divider"
        app:layout_constraintTop_toBottomOf="@id/firstNmbr"
        android:text="SUBMISSIVE"
        android:textSize="18dp"
        android:textColor="@color/white"/>


    <TextView
        android:id="@+id/secondNmbr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/divider"
        app:layout_constraintTop_toBottomOf="@id/subTxt"
        android:layout_marginTop="30dp"
        android:text="(096)6969696"
        android:textSize="25dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/domTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/divider"
        app:layout_constraintTop_toBottomOf="@id/secondNmbr"
        android:text="DOMINATION"
        android:textSize="18dp"
        android:textColor="@color/white"/>


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/firstNmbr"
        app:layout_constraintLeft_toLeftOf="@id/circleCall"
        app:srcCompat="@drawable/ic_round_forward_24" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/secondNmbr"
        app:layout_constraintLeft_toLeftOf="@id/circleCall"
        app:srcCompat="@drawable/ic_round_forward_24" />


    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/background_light"
        app:layout_constraintTop_toBottomOf="@id/mainImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="80dp"/>

    <ImageView
        android:id="@+id/regImg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_baseline_favorite_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="40dp"
        />

    <TextView
        android:id="@+id/regNmbr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/divider"
        app:layout_constraintTop_toTopOf="@id/regImg"

        android:text="(069)7777777"
        android:textSize="25dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/regTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/divider"
        app:layout_constraintTop_toBottomOf="@id/regNmbr"
        android:text="regular client"
        android:textSize="18dp"
        android:textColor="@color/white"/>






</androidx.constraintlayout.widget.ConstraintLayout>